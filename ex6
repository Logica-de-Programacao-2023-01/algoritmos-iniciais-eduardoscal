algoritmo verificanumeroprimo
    escreva "digite um número inteiro:"
    leia numero
    
    primo = verdadeiro
    
    se numero <= 1 então
        primo = falso
    senão
        para i de 2 até raizquadrada(numero) faça
            se numero % i = 0 então
                primo = falso
                parar para
    
    se primo então
        escreva numero, "é um número primo."
    senão
        escreva numero, "não é um número primo."
   

